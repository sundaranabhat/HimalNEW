<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/Service/SearchService.js"></script>
    <script src="~/Scripts/Controller/SearchController.js"></script>
    <style type="text/css">
        html {
            background-image: url('../../../../images/BlackGrey.jpg') !important;
            background-size: cover; /* <------ */
            background-repeat: no-repeat;
        }

        body {
            background-image: url('../../../../images/BlackGrey.jpg') !important;
            color: #FFF !important;
            background-size: cover; /* <------ */
            background-repeat: no-repeat;
        }

        .box {
            background: rgba(0,0,0,0.4);
            box-shadow: 0 3px 6px rgba(0,0,0,0.9);
            border-radius: 4px;
            padding: 20px;
        }

        /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" rel="home" href="#" title="Sundar">
                    <img style="max-width:100px;  margin-top: -7px;" src="/images/Eagle.jpg"> Sundar
                </a>
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="#"><i class="fa fa-home fa-2x" aria-hidden="true"></i>&nbsp;Home</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-address-book fa-2x"></i>&nbsp; Detail Information</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu<strong class="caret"></strong></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">Sub Menu</a>
                            </li>
                            <li>
                                <a href="#">Another Sub Menu</a>
                            </li>

                            <li class="divider">
                            </li>
                            <li>
                                <a href="#">Separated Sub Menu</a>
                            </li>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()

        <footer class="footer navbar-inverse">
            <div class="col-md-4">
                <fieldset>
                    <legend> Question </legend>
                    <p>.........</p>
                    <p>.........</p>
                </fieldset>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <fieldset>
                    <legend> about app </legend>
                    <p> ..........</p>
                </fieldset>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
