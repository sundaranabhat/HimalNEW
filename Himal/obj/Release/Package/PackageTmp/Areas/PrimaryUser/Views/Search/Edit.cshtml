@model DataAccessLayer.ViewModel.PersonnalViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PrimaryUser/Views/Shared/_LayoutPrimaryUser.cshtml";
}
<br /><br /><br />
<div class="row">
    <div class="  col-sm-12">
        <h4>Edit Detail of @Model.FIRSTNAME  @Model.LASTNAME</h4>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.DODID)
            <div class="panel panel-default box">
                <div class=" box panel-body form-horizontal payment-form">
                    <div class="form-group">
                        <label for="FIRSTNAME" class="col-sm-3 control-label">First Name</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.FIRSTNAME, new { @class = "form-control", required = "required" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="LASTNAME" class="col-sm-3 control-label"><i class="fa fa-address-book" aria-hidden="true">Last name</i></label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.LASTNAME, new { @class = "form-control", required = "required" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-sm-3 control-label">Amount</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="amount" name="amount">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-sm-3 control-label">Gender</label>
                        <div class="col-sm-9">
                            @Html.RadioButtonFor(model => model.GENDER, "Male", false)@Html.Label("Male")
                            @Html.RadioButtonFor(model => model.GENDER, "Female", false)@Html.Label("Female")
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="status" class="col-sm-3 control-label">Status</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="status" name="status">
                                <option>Paid</option>
                                <option>Unpaid</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date" class="col-sm-3 control-label">Date</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.DATEOFBIRTH, new { @class = "form-control", type = "date", required = "required" })

                        </div>
                    </div>

                </div>
            </div>
            <div class="panel panel-default box">
                <div class=" box panel-body form-horizontal payment-form">
                    <div class="form-group">
                        <label for="FIRSTNAME" class="col-sm-3 control-label">First Name</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.FIRSTNAME, new { @class = "form-control", required = "required" })

                         </div>
                    </div>
                    <div class="form-group">
                        <label for="LASTNAME" class="col-sm-3 control-label"><i class="fa fa-address-book" aria-hidden="true">Last name</i></label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.LASTNAME, new { @class = "form-control", required = "required" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-sm-3 control-label">Amount</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="amount" name="amount">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-sm-3 control-label">Gender</label>
                        <div class="col-sm-9">
                            @Html.RadioButtonFor(model => model.GENDER, "Male", false)@Html.Label("Male")
                            @Html.RadioButtonFor(model => model.GENDER, "Female", false)@Html.Label("Female")
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="status" class="col-sm-3 control-label">Status</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="status" name="status">
                                <option>Paid</option>
                                <option>Unpaid</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date" class="col-sm-3 control-label">Date</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.DATEOFBIRTH, new { @class = "form-control", type = "date", required = "required" })

                        </div>
                    </div>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 text-right">
                    <input type="submit" class="btn btn-default preview-add-button" value="Save" />

                </div>
            </div>
            <a href="/Search/Edit/@Model.ID" class="btn btn-danger">Edit</a>

        }
    </div> <!-- / panel preview -->
</div>
