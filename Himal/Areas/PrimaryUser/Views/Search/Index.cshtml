@model DataAccessLayer.ViewModel.PersonnalListModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PrimaryUser/Views/Shared/_LayoutPrimaryUser.cshtml";
    int Sno = 1;
}
<br />
<div class="row">
    @using (Html.BeginForm())
    {
        <input type="text" class="form-control lg" name="searchText" />
        <input type="submit" value="Search" />
        <hr />

        if (Model.PersonnalList.Count != 0)
        {
            <table class="table-bordered table-striped table-condensed table-responsive">
                <thead>
                    <tr class="danger">
                        <th>
                            S.No
                        </th>
                        <th>
                            First Name
                        </th>
                        <th>Last Name</th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PersonnalList)
                    {
                        <tr>
                            <td>@Sno</td>
                            <td>@item.FIRSTNAME</td>
                            <td>@item.LASTNAME</td>
                            <td><a href="#">Detail</a></td>
                        </tr>
                        Sno = Sno + 1;
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Records found!</p>
        }

    }

</div>